<a class="btn btn-success btn-sm" href="<%= new_sf_case_path %>">New Case</a>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Subject</th>
      <th>CaseNumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sf_cases.each do |sf_case| %>
      <tr>
        <td><%= sf_case["Id"] %></td>
        <td><%= sf_case["Subject"] %></td>
        <td><%= sf_case["CaseNumber"] %></td>
        <td>
          <%= link_to sf_case_path(sf_case.Id), :class => "btn btn-secondary" do %>
            <i class="fa fa-search"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_sf_case_path(sf_case.Id), :class => "btn btn-primary" do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>
        <td>
          <%= link_to "/sf_cases/#{sf_case["Id"]}", method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
