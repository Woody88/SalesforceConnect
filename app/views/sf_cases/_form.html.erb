
<%= simple_form_for @sf_case, :url => (@sf_case.Id ? sf_case_path : new_sf_case_path), :method => (@sf_case.Id ? "put" : "post") do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :Subject %>
    <%= f.input :Status %>
    <%= f.input :Origin %>
    <%= f.input :Priority %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, (@sf_case.Id ? "Update" : "Create")%>
  </div>
<% end %>
