<div id="sign-in-form-container">
 <div class="container">
   <div class="row">
     <div class="col-md-4 col-md-offset-4 card card-block">
      <%= simple_form_for(@connection, url: "/login_", html: { class: "form-horizontal"}) do |f| %>
        <%= f.input :user, as: :string, placeholder: "", label: "Email" %>
        <%= f.input :password, as: :password, placeholder: "", label: "Password" %>
        <div class="form-group">
          <%= f.button :submit, "Login" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
